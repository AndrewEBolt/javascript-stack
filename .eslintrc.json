{
	"env": {
		"jest": true
	},
	"extends": [
		"airbnb",
		"plugin:flowtype/recommended"
	],
	"parser": "babel-eslint",
	"plugins": [
		"flowtype",
		"compat"
	],
	"rules": {
		"indent": ["error", "tab"],
		"semi": [2, "never"],
		"no-tabs": "off",
		"no-unexpected-multiline": 2,
		"compat/compat": 2
	}
}
